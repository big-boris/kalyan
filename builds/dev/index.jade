                .product
                    img(src='img/tabak_darkside.jpg' alt='Кальян Darkside' width='100%')
                    .product__name Кальян Darkside
                    .product__price
                        ul.product__price__option
                            li На обычной чаше &#8212; 1 200 р
                            li На фрукте &#8212; 1 500 р
            .col-sm-6.col-md-4
                .product
                    img(src='img/tabak_fumari.jpg' alt='Кальян Fumari' width='100%')
                    .product__name Кальян Fumari
                    .product__price
                        ul.product__price__option
                            li На обычной чаше &#8212; 900 р
                            li На фрукте &#8212; 1 000 р
            //- .clearfix.visible-sm-block
            .col-sm-6.col-md-4
                .product
                    img(src='img/tabak_nakhla.jpg' alt='Кальян Nakhla' width='100%')
                    .product__name Кальян Nakhla
                    .product__price
                        ul.product__price__option
                            li На обычной чаше &#8212; 650 р
                            li На фрукте &#8212; 750 р

            //- kalyan second row
        .row
            .col-sm-6.col-md-4
                .product
                    img(src='img/tabak_serbetli.jpg' alt='Кальян Serbetli' width='100%')
                    .product__name Кальян Serbetli
                    .product__price
                        ul.product__price__option
                            li На обычной чаше &#8212; 650 р
                            li На фрукте &#8212; 750 р
            .col-sm-6.col-md-4
                .product
                    img(src='img/tabak_adalya.jpg' alt='Кальян Adalya' width='100%')
                    .product__name Кальян Adalya
                    .product__price
                        ul.product__price__option
                            li На обычной чаше &#8212; 650 р
                            li На фрукте &#8212; 750 р
            .col-sm-6.col-md-4
                .product
                    img(src='img/tabak_alfakher.jpg' alt='Кальян Al Fakher' width='100%')
                    .product__name Кальян Al Fakher
                    .product__price
                        ul.product__price__option
                            li На обычной чаше &#8212; 650 р
                            li На фрукте &#8212; 750 р

        .row.vyberimix
            .col-sm-12.col-md-6
                img(src='img/vyberi_mix.jpg', alt='Выбери свой микс' width='100%')
            .col-sm-12.col-md-6.text-center
                .vyberimix__title Выбери свой вкус или микс
                .vyberimix__text киви &#8226; мята &#8226; бабл гам &#8226; ананас &#8226; малина &#8226; вишня &#8226; манго &#8226; гуава &#8226; бабл гам фрукт &#8226; манго айс &#8226; кактус &#8226; арбуз &#8226; лимон пай &#8226; дыня &#8226; апельсин - ананас &#8226;персик &#8226; апельсин &#8226; черника &#8226; виноград

        .row.map
            .container
                img(src='img/map.jpg', alt='карта контакты' width='100%')

        .row.footer
            .col-md-3.text-center
                .logo
                    img(src='img/logo.jpg' alt='Кальянная Smoke Room Нахабино, недорого покурить кальян' height='160px')
            .col-md-5.text-center
                .footer__text Выбери свой вкус!
            .col-md-4.text-left
                .footer__phone 8 999 123-45-78
                .footer__address Нахабино, ThereIsSomeStreet ул., 11

